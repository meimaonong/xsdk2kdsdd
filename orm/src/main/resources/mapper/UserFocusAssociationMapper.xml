<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art.app.orm.dao.UserFocusAssociationMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.art.app.orm.entity.UserFocusAssociation">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="focus_id" property="focusId"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id AS userId, focus_id AS focusId, created_at AS createdAt, updated_at AS updatedAt, del_flag AS delFlag
    </sql>

    <select id="findFocusArtists" resultType="java.lang.Integer">
        select focus_id
        from user_focus_association uf join user_info ui on uf.focus_id = ui.user_id
        where ui.is_artist = 1 and ui.del_flag = 0 and uf.del_flag =0 and uf.user_id = #{userId}
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art.app.orm.dao.AssembleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.art.app.orm.entity.Assemble">
        <id column="id" property="id"/>
        <result column="assemble_id" property="assembleId"/>
        <result column="user_id" property="userId"/>
        <result column="sponsor" property="sponsor"/>
        <result column="del_flag" property="delFlag"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, assemble_id AS assembleId, user_id AS userId, sponsor, del_flag AS delFlag, created_at AS createdAt, updated_at AS updatedAt
    </sql>

    <select id="findByCondition" resultMap="BaseResultMap">
        select
        b.* from assemble_info a join assemble b on a.id = b.assemble_id
        where a.type = #{type} and a.sn_id = #{resId} and a.del_flag = 0 and b.del_flag = 0
        and b.user_id = #{userId}
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art.app.orm.dao.UserPushMsgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.art.app.orm.entity.UserPushMsg">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="msg_id" property="msgId"/>
        <result column="status" property="status"/>
        <result column="type" property="type"/>
        <result column="del_flag" property="delFlag"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id AS userId, msg_id AS msgId, status, type, del_flag AS delFlag, created_at AS createdAt, updated_at AS updatedAt
    </sql>

    <select id="findLatestMsgByUserIdAndType" resultType="java.lang.String">
        select pm.title from user_push_msg up join push_msg pm on up.msg_id = pm.id where user_id = #{userId} and up.type = #{type}
        order by up.created_at desc limit 1
    </select>

</mapper>
